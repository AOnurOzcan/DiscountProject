<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_color_red</item>
        <item name="colorPrimaryDark">@color/danger</item>
        <item name="colorAccent">@color/background_color</item>
        <item name="android:background">@color/main_background</item>
        <item name="android:itemBackground">@color/menu_background</item>
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
    </style>

    <!-- Action bar styles  Start-->
    
    <style name="AppTheme." parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:itemBackground">@color/menu_background</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Base.Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/action_bar_backgorund</item>
    </style>
    
    <!-- Action bar styles  End-->
    <!-- Profile Fragment Style Starts. -->
    <style name="profileEditText">
    <item name="android:layout_marginBottom">@dimen/profile_edit_text_margin</item>
    </style>
    <!-- Profile Fragment Style End. -->

    <style name="StyledDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@drawable/progress_dialog</item>
        <item name="android:fullDark">@drawable/progress_dialog</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>

    <style name="RegisterActionBar">
        <item name="android:background">@color/main_color_red</item>
    </style>

    <style name="RegisterTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/main_color_red</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimaryDark">@color/main_color_blood_red</item>
        <item name="android:textColorPrimary">@color/main_color_black</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/main_color_black</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/main_color_black</item>
        <!--<item name="colorControlNormal">@color/main_color_white</item>-->
        <item name="colorControlActivated">@color/main_color_white</item>
    </style>
</resources>
