<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/vertical_padding"
    android:paddingLeft="@dimen/horizantol_padding"
    android:paddingRight="@dimen/horizantol_padding"
    android:paddingTop="@dimen/vertical_padding">


    <EditText
        android:id="@+id/nameEditText"
        style="@style/profileEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/lastNameEditText"
        style="@style/profileEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/lastName"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/phoneEditText"
        style="@style/profileEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Telefon Numarası"
        android:inputType="phone" />

    <EditText
        android:id="@+id/birthDayEditText"
        style="@style/profileEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Doğum Tarihi"
        android:inputType="date" />

    <EditText
        android:id="@+id/genderEditText"
        style="@style/profileEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Cinsiyet"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/cityEditText"
        style="@style/profileEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Şehir"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Bilgilerimi Kaydet" />

</LinearLayout>